<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Item_city"
    style="@style/mw"
    android:layout_margin="10dp"
    android:orientation="vertical" >
     <LinearLayout
        android:id="@+id/post1text_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="5dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical" >

            <!-- 标题 -->

            <TextView
                android:id="@+id/post1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textSize="20sp" />
            <!-- 文本内容 -->

            <TextView
                android:id="@+id/post1_content"
                style="@style/mw"
                android:singleLine="true"
                android:textColor="#363636"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <com.qixing.my.views.CircleImageView
                android:id="@+id/userimage"
                style="@style/userimage2"
                android:src="@drawable/g03" />
        </LinearLayout>
    </LinearLayout>

    <!-- 图片 -->
     <LinearLayout
        android:id="@+id/postImage_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp" >

        <ImageView
            android:id="@+id/post1_image"
            style="@style/gc_post_photo"
            android:layout_marginRight="3dp"
             />

        <ImageView
            android:id="@+id/post1_image2"
           style="@style/gc_post_photo"
            android:layout_marginRight="3dp"
            />

        <ImageView
            android:id="@+id/post1_image3"
            style="@style/gc_post_photo"
             />
    </LinearLayout> 

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp" >
//显示发帖人，可删
   <!--      <TextView
            android:id="@+id/post1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp" /> -->

        <TextView
            android:id="@+id/post1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
             />

        <ImageView
            android:id="@+id/post1_good_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/post1_good_sum"
            android:scaleType="fitXY"
            android:src="@drawable/good_before" />

        <TextView
            android:id="@+id/post1_good_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/post1_comment_image" />

        <ImageView
            android:id="@+id/post1_comment_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/post1_comment_sum"
            android:scaleType="fitXY"
            android:src="@drawable/comment" />

        <TextView
            android:id="@+id/post1_comment_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>
    

</LinearLayout>
