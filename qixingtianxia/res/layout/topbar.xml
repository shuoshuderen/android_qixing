<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/topbar"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/backText"
        style="@style/topbartext"
        android:layout_toRightOf="@+id/backImage"
        android:text="@string/topbar_back_text" />

    <TextView
        android:id="@+id/top_center_text"
        style="@style/topbartext"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/top_right_text"
        style="@style/topbar_right_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

    <ImageView
        android:id="@+id/top_right_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

</RelativeLayout>